@model MoviesCatalog.Models.Movie
@using System.IO
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <div class="card mb-3">
        <div class="row">
            <div class="img-container col-md-4">
                @if (File.Exists($"wwwroot/{Model.Poster}"))
                {
                    <div class="img-blur" style="background-image: url(@Model.Poster"></div>
                    <img class="card-img-top custom-style-for-card-img" src="@Model.Poster" alt="Poster">
                }
                else
                {
                    <div class="img-blur" style="background-image: url(/images/film-poster-placeholder.png)"></div>
                    <img class="card-img-top custom-style-for-card-img" src="~/images/film-poster-placeholder.png" alt="Poster">
                }
            </div>
            <div class="card-body col-md-8">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text"><b>Year:</b> <small class="text-muted">@Model.Year</small></p>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
      
    </div>
</div>
<div>

    @if (User.Identity.IsAuthenticated && ViewBag.LoggedUserId == Model.IdentityUserId)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
    }
    <a href="@ViewBag.returnUrl">Back to List</a>
</div>
